<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane stylesheets="@../CSS/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.projetointegrador.controllers.JanelaEditarCarro">

   <children>

      <Button alignment="BASELINE_LEFT" onAction="#voltar" style="-fx-background-color: #f4f4f4;" text="Voltar">
         <graphic>
            <ImageView id="imgVoltar" fitHeight="150.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
         </graphic>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </Button>

      <VBox alignment="CENTER_LEFT" layoutX="297.0" prefHeight="458.0" prefWidth="420.0" spacing="5.0">
      
         <padding>
            <Insets top="15.0" />
         </padding>
      
         <Label text="Placa" />
         <TextField fx:id="tfPlaca" prefHeight="24.0" prefWidth="0.0">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>
      
         <Label text="Modelo" />
         <TextField fx:id="tfModelo">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>

         <Label text="Quantidade de assentos do carro" />
         <TextField fx:id="tfQuantidadeLugares">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>
      
         <Label text="Cor" />
         <TextField fx:id="tfCor">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>
      
         <HBox prefHeight="24.0" prefWidth="427.0">

            <Button onAction="#editarCarro" prefHeight="24.0" prefWidth="220.0" text="Editar">
               <font>
                  <Font size="12.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>

            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>

         </HBox>
      
      </VBox>
   </children>
</Pane>
