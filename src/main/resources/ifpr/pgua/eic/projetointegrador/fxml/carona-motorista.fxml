  </rowConstraints>

    <children>

      <VBox alignment="TOP_CENTER" prefHeight="330.0" prefWidth="440.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">

         <children>

            <Label text="Caronas ofertadas:" />

              <TableView fx:id="caronas" maxWidth="-Infinity" minWidth="-Infinity" onMouseClicked="#carregarDados" prefHeight="121.0" prefWidth="347.0">

