<GridPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../CSS/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.projetointegrador.controllers.JanelaCaronaMotorista">

  <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" prefWidth="40.0" />
