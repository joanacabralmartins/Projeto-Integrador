                </columns>

              </TableView>

            <HBox prefHeight="152.0" prefWidth="520.0">

               <children>

                  <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="122.0" prefWidth="195.0">

                     <children>

                        <Label text="Pontos de Parada:" />

                        <TableView fx:id="pontos" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="126.0" prefWidth="107.0">

                          <columns>
                            <TableColumn fx:id="pontosDescricao" prefWidth="110.0" text="Descricao" />
