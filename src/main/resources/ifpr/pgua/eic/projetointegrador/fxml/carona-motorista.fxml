                  <TableColumn fx:id="caronaId" prefWidth="40.0" visible="false" />
                  <TableColumn fx:id="caronaIdMotorista" prefWidth="40.0" visible="false" />
                  <TableColumn fx:id="caronaIdCarro" prefWidth="40.0" visible="false" />
                  <TableColumn fx:id="caronaOrigem" text="Origem" />
                  <TableColumn fx:id="caronaDestino" text="Destino" />
                  <TableColumn fx:id="caronaVagas" prefWidth="75.0" text="Vagas" />
                  <TableColumn fx:id="caronaData" prefWidth="75.0" text="Data" />
