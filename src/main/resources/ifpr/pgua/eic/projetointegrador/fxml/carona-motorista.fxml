                     </children>

                  </VBox>

                  <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="142.0" prefWidth="330.0">

                     <children>

                        <Label alignment="TOP_LEFT" text="Passageiros:" />

                        <TableView fx:id="passageiros" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="137.0" prefWidth="315.0">

                          <columns>

                              <TableColumn fx:id="pasNome" prefWidth="120.0" text="Nome" />
                              <TableColumn fx:id="pasFuncao" prefWidth="70.0" text="Funcao" />
                              <TableColumn fx:id="pasCurso" prefWidth="75.0" text="Curso" />
                              <TableColumn fx:id="pasIdade" prefWidth="54.0" text="Idade" />

                          </columns>

                        </TableView>

                     </children>

                  </VBox>

               </children>

            </HBox>
            
            <HBox prefHeight="76.0" prefWidth="520.0" spacing="5.0">

               <children>

                  <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="225.0">

                     <children>

                        <Label text="Carro:" />

                        <TableView fx:id="carro" minHeight="-Infinity" prefHeight="60.0" prefWidth="223.0">

                          <columns>
                              <TableColumn fx:id="carPlaca" prefWidth="75.0" text="Placa" />
                              <TableColumn fx:id="carModelo" prefWidth="75.0" text="Modelo" />
                              <TableColumn fx:id="carCor" prefWidth="75.0" text="Cor" />
                          </columns>

                        </TableView>

                     </children>

                  </VBox>
      
                  <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="136.0" prefWidth="297.0" spacing="10.0">
                     
                     <children>
                        <Button onAction="#criarCarona" text="Criar Carona" />
                        <Button onAction="#editarCarona" text="Editar Carona" />
                        <Button onAction="#inativarCarona" text="Excluir Carona" />
                     </children>
      
                  </HBox>

               </children>

            </HBox>

         </children>

      </VBox>

      <VBox prefHeight="200.0" prefWidth="100.0">

         <children>

            <Button onAction="#voltar" style="-fx-background-color: #f4f4f4;" text="Voltar">

               <graphic>
                  <ImageView id="imgVoltar" fitHeight="150.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                  </ImageView>
               </graphic>

            </Button>

         </children>

         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>

      </VBox>

