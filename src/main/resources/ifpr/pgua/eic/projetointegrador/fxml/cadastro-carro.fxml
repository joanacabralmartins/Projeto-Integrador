<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane stylesheets="@../CSS/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.projetointegrador.controllers.JanelaCadastroCarro">

   <children>

      <VBox layoutY="109.0" prefHeight="337.0" prefWidth="718.0" spacing="5.0">
         <padding>
            <Insets left="300.0" top="50.0" />
         </padding>
      
         <Label text="Placa" />
         <TextField fx:id="tfPlaca" prefWidth="120.0">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>
      
         <Label text="Modelo" />
         <TextField fx:id="tfModelo">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>

         <Label text="Quantidade de assentos do carro" />
         <TextField fx:id="tfQuantidadeLugares" prefHeight="24.0" prefWidth="218.0">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>
      
         <Label text="Cor" />
         <TextField fx:id="tfCor">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
         </TextField>
      
         <HBox>
            <Button onAction="#cadastrarCarro" prefHeight="16.0" prefWidth="70.0" text="Cadastrar">
               <font>
                  <Font size="11.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </HBox>
      
      </VBox>

         <HBox layoutX="9.0" layoutY="14.0" prefHeight="32.0" prefWidth="700.0">
            <children>
               <Button onAction="#voltar" style="-fx-background-color: #f4f4f4;" text="Voltar">
                  <graphic>
                     <ImageView id="imgVoltar" fitHeight="150.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     </ImageView>
                  </graphic>
               </Button>
            </children>
            
         <padding>
            <Insets top="15.0" />
         </padding>
      </HBox>
      
   </children>
</Pane>
