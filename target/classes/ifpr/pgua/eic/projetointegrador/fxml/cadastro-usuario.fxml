   xmlns="http://javafx.com/javafx/19" 
   xmlns:fx="http://javafx.com/fxml/1" 
   fx:controller="ifpr.pgua.eic.projetointegrador.controllers.JanelaCadastroUsuario">
   
   <center>
      <ScrollPane id="scrollPaneCM">      
         <content>
      
            <VBox spacing="5.0">
            
               <Label text="Nome">
                  <VBox.margin>
                     <Insets bottom="-2.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="tfNome" prefWidth="120.0">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </TextField>
            
               <Label text="CPF">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="tfCPF">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </TextField>
            
               <Label text="Senha">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <PasswordField fx:id="pfSenha">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </PasswordField>
            
               <Label text="Função no câmpus">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <ChoiceBox fx:id="cbFuncao" prefHeight="24.0" prefWidth="306.0">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </ChoiceBox>
      
               <Label text="Data de nascimento">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <DatePicker fx:id="dpDataNascimento" prefHeight="24.0" prefWidth="306.0">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </DatePicker>
      
               <Label text="Curso (opcional)">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="tfCurso">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </TextField>
      
               <Label text="Telefone (opcional)">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="tfTelefone">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </TextField>
      
               <Label text="Endereço (opcional)">
                  <VBox.margin>
                     <Insets bottom="-2.0" top="6.0" />
                  </VBox.margin>
               </Label>
               <TextArea fx:id="taEndereco" prefHeight="38.0" prefWidth="306.0">
                  <VBox.margin>
                     <Insets right="200.0" />
                  </VBox.margin>
               </TextArea>
            
               <HBox>
                  <Button onAction="#cadastrarUsuario" prefHeight="22.0" prefWidth="64.0" text="Cadastrar">
                     <font>
                        <Font size="10.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="4.0" />
                     </HBox.margin>
                  </Button> 
               </HBox>
               <padding>
                  <Insets left="150.0" top="40.0" />
               </padding>
            
            </VBox>
      
         </content>
      </ScrollPane>
   </center>

